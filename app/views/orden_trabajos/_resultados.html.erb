<div class="p-2 border rounded shadow-sm">
<% if resultados.any? %>
  <div class="table-responsive mt-3">
    <table class="table table-hover table-bordered align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>N° OT</th>
          <th>Cliente</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% resultados.each do |ot| %>
          <tr id="resultado_<%= ot.id %>">
            <td><span class="badge bg-primary fs-6"><%= ot.trnum %></span></td>
            <td class="fw-bold"><%= ot.clinom %></td>
            <td><%= ot.nomprod&.truncate(40) %></td>
            <td><%= number_with_delimiter(ot.trcan) %></td>
            <td>
              <button type="button"
                      class="btn btn-success btn-sm"
                      data-action="click->buscar-ot#asignar"
                      data-ot-id="<%= ot.id %>">
                <i class="fa-solid fa-check"></i> Asignar
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% else %>

  <div class="alert alert-warning mt-3 text-center" role="alert">
    <i class="fa-solid fa-magnifying-glass"></i>
    No se encontraron resultados para esta búsqueda.
  </div>

<% end %>
</div>